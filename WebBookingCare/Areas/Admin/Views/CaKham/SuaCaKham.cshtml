@model WebBookingCare.Models.EF.CaKham

@{
    ViewBag.Title = "SuaCaKham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card-header py-3">
    <h4 class="m-0 font-weight-bold text-primary text-center">THAY ĐỔI THÔNG TIN CA KHÁM</h4>
    <hr />
</div>

<div class="d-flex justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="noidung m-5">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.MaCa)

                        <div class="form-group font-weight-bold">
                            <div class="row">
                                <div class="col-3">
                                    @Html.LabelFor(model => model.TenCa, htmlAttributes: new { @class = "control-label col-md-12" })

                                </div>
                                <div class="col-9">
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.TenCa, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TenCa, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="form-group font-weight-bold">
                            <div class="row">
                                <div class="col-3">
                                    @Html.LabelFor(model => model.ThoiGianBD, htmlAttributes: new { @class = "control-label col-md-12" })

                                </div>
                                <div class="col-9">
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.ThoiGianBD, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ThoiGianBD, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="form-group font-weight-bold">
                            <div class="row">
                                <div class="col-3">
                                    @Html.LabelFor(model => model.ThoiGianKT, htmlAttributes: new { @class = "control-label col-md-12" })

                                </div>
                                <div class="col-9">
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.ThoiGianKT, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ThoiGianKT, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="form-group font-weight-bold">
                            <div class="row">
                                <div class="col-3">
                                    @Html.LabelFor(model => model.SoLuongKham, htmlAttributes: new { @class = "control-label col-md-12" })

                                </div>
                                <div class="col-9">
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.SoLuongKham, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.SoLuongKham, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="form-group font-weight-bold">
                            <div class="col-md-offset-2 col-md-12 d-flex justify-content-center p-3">
                                <input type="submit" value="Lưu" class="btn btn-success w-100 h-100" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
