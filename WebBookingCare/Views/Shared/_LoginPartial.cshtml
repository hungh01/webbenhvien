@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar" }))
    {
        @Html.AntiForgeryToken()

<nav id="navbar" class="navbar order-last order-lg-0">
    <ul>
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link scrollto" })
        </li>
        <li><a class="nav-link scrollto" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    <i class="bi bi-list mobile-nav-toggle"></i>
</nav>
    }
}
else
{
<nav id="navbar" class="navbar order-last order-lg-0">
    <ul>
        <li>@Html.ActionLink("Đăng ký", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link scrollto" })</li>
        <li>@Html.ActionLink("Đăng nhập", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link scrollto" })</li>
    </ul>
    <i class="bi bi-list mobile-nav-toggle"></i>
</nav>


}
